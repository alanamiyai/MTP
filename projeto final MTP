void menu();

struct cadastro
{
   char nome[n];
   int idade;
   char RG[9];
   char CPF[12];
   char SENHA[15];
	char conf_senha[15];
	char USER[20];
	double saldo;
	int deposito[100];
	int saque[100];
}pessoa;

int posicao = 0;
int posicao_sac=0;
